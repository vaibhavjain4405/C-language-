// Online C compiler to run C program online
#include<stdio.h>
int main(){
    //simple interest 
    int p,t;
    float r,SI;
    printf("Enter the Principal amount deposit = ");
    scanf("%d",&p);
    
    printf("Enter the Interest rate amount deposit = ");
    scanf("%f",&r);
    
    printf("Enter the Time in year amount deposit = ");
    scanf("%d",&t);
    
    SI = (p*r*t)/10000;
    
    printf("simple interest is %.2f",SI);
}

